<div class="header" role="banner">
    <div class="site-header">
        <div class="trashpanda">
            <a href="{{ base_url }}">
                {% if config.session.theme == "dark" %}
                    <img src="{{ base_url }}/{{ pages["_meta"].meta.Logonight|url }}" alt="Nocturnal Trash Panda" />
                {% else %}
                    <img src="{{ base_url }}/{{ pages["_meta"].meta.Logoday|url }}" alt="Diligent Dayworking Panda" />
                {% endif %}
            </a>
        </div>
        <div class="title" {{ pages["_meta"].meta.tagline ? ' class="tagline"' }}>
            <a href="{{ base_url }}">
                <h1>{{ site_title }}</h1> {{ pages["_meta"].meta.tagline|markdown }}
            </a>
        </div>
        <a class="nav-toggle" id="nav-toggle" title="Toggle Menu" role="button" aria-controls="nav" aria-expanded="false"
            tabindex="0">
            <i class="fa fa-bars" aria-hidden="true" id="toggler"></i>
            <span class="sr-only">Toggle Menu</span>
        </a>
    </div>
    <div class="nav">
        <div id="nav" class="nav" role="navigation" tabindex="-1">
            <ul>
                {% for page in pages(depthOffset=-1) if page.title and not page.hidden %}
                    {# {{ dump(page.meta.description) }} #}
                    <li{% if page.id==current_page.id %} class="active" {% endif %}>
                        <a href="{{ page.url }}">
                            {% if page.meta.icon %}
                                <i class="{{ page.meta.icon }}"></i>
                            {% else %}
                                {{ page.title }}</a>
                            {% endif %}
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>
